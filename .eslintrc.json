{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest" : true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-underscore-dangle": "off",
        "indent": ["error", 4],
        "max-len": "off",
        "camelcase": "off",
        "class-methods-use-this": "off",
        "radix": "off",
        "no-await-in-loop": "off",
        "no-restricted-syntax" : "off"
    }
}
